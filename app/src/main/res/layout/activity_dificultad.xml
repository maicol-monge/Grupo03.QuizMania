<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        tools:context=".DificultadActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <!-- Mismo encabezado que en activity_categoria.xml -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:onClick="home"
                    android:layout_gravity="start"
                    app:srcCompat="@drawable/home_icon"
                    tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/txt_seleccione_la_dificultad" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="133dp"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="@string/txt_banner_pregunta"
                    app:srcCompat="@drawable/banner_dificultad" />

                <Button
                    android:id="@+id/btnFacil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/btn_style_signo_mas"
                    android:drawableLeft="@drawable/signo_mas_white"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/txt_facil"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:backgroundTint="@null"
                    tools:ignore="RtlHardcoded,TextContrastCheck" />

                <Button
                    android:id="@+id/btnMedio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/btn_style_cuadrado"
                    android:drawableLeft="@drawable/cuadrado_white"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/txt_medio"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:backgroundTint="@null"
                    tools:ignore="RtlHardcoded,TextContrastCheck" />

                <Button
                    android:id="@+id/btnDificil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/btn_style_circulo"
                    android:drawableLeft="@drawable/circulo_white"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/txt_dificil"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:backgroundTint="@null"
                    tools:ignore="RtlHardcoded,TextContrastCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutSeleccion"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                android:background="@drawable/btn_style_d"
                app:backgroundTint="@null"
                android:padding="20dp"
                android:visibility="invisible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"

                    android:text="@string/txt_est_s_listo" />

                <TextView
                    android:id="@+id/txtModoJuego"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_style_triangulo"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/txtCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_style_triangulo"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/txtDificultad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_style_triangulo"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:text="" />

                <Button
                    android:id="@+id/btnIniciar"
                    android:layout_width="150dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/btn_iniciar"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp"
                    android:background="@drawable/btn_style_seguir"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    android:layout_gravity="center_horizontal"
                    android:onClick="volverACategorias" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAtras"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/txt_atras"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:background="@drawable/btn_style_rendirse"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:onClick="volverACategorias" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>