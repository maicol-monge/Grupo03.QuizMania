<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        tools:context=".Modo_Cronometrado">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <!-- Encabezado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="@string/tiempo" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="133dp"
                    android:contentDescription="@string/txt_banner_pregunta"
                    app:srcCompat="@drawable/banner_pregunta" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4EE6B3"
                    android:drawableEnd="@drawable/signo_mas_white"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="DosMinuto"
                    android:text="@string/_2_minuto"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffcc00"
                    android:drawableEnd="@drawable/cuadrado_white"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="UnMinutos"
                    android:text="@string/_1_minuto"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00a2e9"
                    android:drawableEnd="@drawable/circulo_white"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="TreintaSegundos"
                    android:text="@string/_30_segundos"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ff3399"
                    android:drawableEnd="@drawable/triangulo_white"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="VeinteSegundos"
                    android:text="@string/_20_segundos"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAtras"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/txt_atras"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:background="@drawable/btn_style_rendirse"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:onClick="volverAModoJuego" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>